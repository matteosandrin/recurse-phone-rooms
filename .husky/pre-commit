#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Display message indicating tests are running
echo "ğŸ“‹ Running API tests before commit..."

# Run API tests
npm run test:api

# If tests fail, prevent the commit
if [ $? -ne 0 ]; then
  echo "âŒ API tests failed. Please fix the tests before committing."
  echo ""
  echo "ğŸ” Check if your test database is set up correctly:"
  echo "   If this is your first time running tests, run: npm run setup:test-db"
  echo ""
  exit 1
fi

# If tests pass, allow the commit
echo "âœ… API tests passed. Continuing with commit..."
exit 0
